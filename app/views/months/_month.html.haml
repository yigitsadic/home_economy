%h1= month.full_name

.container.text-center
  .row
    .col
      %h2 Total Income
      %h3
        %span.badge.rounded-pill.text-bg-success
          = number_to_currency(month.total_income)
    .col
      %h2 Total Expense
      %h3
        %span.badge.rounded-pill.text-bg-danger
          = number_to_currency(month.total_expense)
    .col
      %h2 Total Investment
      %h3
        %span.badge.rounded-pill.text-bg-warning
          = number_to_currency(month.total_investment)
    .col
      %h2 Available
      %h3
        %span.badge.rounded-pill.text-bg-info
          = number_to_currency(month.available_amount)

.container-fluid
  .row
    .col-4
      = turbo_frame_tag(:expense_list, src: month_expense_list_path(@month.id), loading: :lazy) do
        Loading expenses...

    .col-4
      = turbo_frame_tag(:investment_list, src: month_investment_list_path(@month.id), loading: :lazy) do
        Loading investments...

